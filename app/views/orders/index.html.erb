<div class="page-header order-header">
  <%= link_to new_order_path, class:'pull-right' do %>
    <span>New Order</span>
  <% end %>
  <h1 Listing>Dino's Jewelry Orders</h1>
</div>

<%= search_form_for @q do |f| %>

  <div class="col-xs-12">
    <%= f.label :first_name_or_last_name_cont, "Name:", class: "col-xs-4 col-sm-2 col-lg-1" %>
    <%= f.search_field :first_name_or_last_name_cont, class: "col-xs-8 col-sm-10 col-lg-11" %>
  </div>

  <div class="col-xs-12">
    <%= f.label :email_cont, "Email:", class: "col-xs-4 col-sm-2 col-lg-1" %>
    <%= f.search_field :email_cont, class: "col-xs-8 col-sm-10 col-lg-11" %>
  </div>

  <div class="col-xs-12">
    <%= f.label :created_at_lteq, "Date Range:", class: "col-xs-4 col-sm-2 col-lg-1" %>
    <%= f.text_field :created_at_lteq, id:"datepicker", class: "col-xs-8 col-sm-10 col-lg-11" %>
  </div>

  <div class="form-group row col-xs-12">
    <%= f.submit class: "search-bar-button pull-right"%>
    <%= link_to "Reset Orders", orders_path, class:"search-bar-button pull-left" %>
  </div>
<% end %>

<div class="col-xs-12 text-center order-index">
  <div class="row">
    <div class="col-xs-2">
      <h4>Order #</h4>
    </div>
    <div class="col-xs-3">
      <h4>Order Date</h4>
    </div>
    <div class="col-xs-5">
      <h4>Email</h4>
    </div>
    <div class="col-xs-2">
      <h4>Total</h4>
    </div>
  </div>
  <div id="accordion" role="tablist" aria-multiselectable="true">
    <%- @orders.each_with_index do |order, index| %>
      <div class="card">
        <div class="card-header" role="tab" id="heading<%= index %>">
          <h5 class="mb-0">
            <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= index %>" aria-expanded="false" aria-controls="collapse<%= index %>">
              <div class="row">
                <div class="col-xs-2">
                  <h5><%= order.id %></h5>
                </div>
                <div class="col-xs-3">
                  <h5><%= order.created_at.strftime("%m/%d/%Y") %></h5>
                </div>
                <div class="col-xs-5">
                  <h5><%= order.email %></h5>
                </div>
                <div class="col-xs-2">
                  <h5><%= number_to_currency(order.total) %></h5>
                </div>
              </div>
            </a>
          </h5>
        </div>
        <div id="collapse<%= index %>" class="collapse" role="tabpanel" aria-labelledby="heading<%= index %>">
          <div class="card-block">
            <div class="row">
              <ul class="row text-left">
                <li class="col-xs-12 ">
                  <div class="col-xs-4">
                    Name:
                  </div>
                  <div class="col-xs-8">
                    <%= order.first_name %> <%= order.last_name %>
                  </div>
                </li>
                <li class="col-xs-12">
                  <div class="col-xs-4">
                    Address:
                  </div>
                  <div class="col-xs-8">
                    <%= order.address %>
                  </div>
                </li>
                <li class="col-xs-12">
                  <div class="col-xs-4">
                    City &amp; State:
                  </div>
                  <div class="col-xs-8">
                    <%= order.city %>, <%= order.state %>
                  </div>
                </li>
                <li class="col-xs-12">
                  <div class="col-xs-4">
                    Zip Code:
                  </div>
                  <div class="col-xs-8">
                    <%= order.zip %>
                  </div>
                </li>
                <li class="col-xs-12">
                  <div class="col-xs-4">
                    Phone Number:
                  </div>
                  <div class="col-xs-8">
                    <%= order.phone_number %>
                  </div>
                </li>
                <li class="col-xs-12">
                  <div class="col-xs-4">
                    Number of Items:
                  </div>
                  <div class="col-xs-8">
                    <%= order.line_items.count %>
                  </div>
                </li>
                <li class="col-xs-12">
                  <div class="col-xs-4">
                    Sub-Total:
                  </div>
                  <div class="col-xs-8">
                    <%= order.sub_total %>
                  </div>
                </li>
                <li class="col-xs-12">
                  <div class="col-xs-4">
                    Tax:
                  </div>
                  <div class="col-xs-8">
                    <%= order.sales_tax %>
                  </div>
                </li>
                <li class="col-xs-12">
                  <div class="col-xs-4">
                    Pay Type:
                  </div>
                  <div class="col-xs-8">
                    <%= order.pay_type %>
                  </div>
                </li class="col-xs-12">
                <li class="col-xs-12">
                  <div class="col-xs-4">
                    Tracking Number:
                  </div>
                  <div class="col-xs-8">
                    <%= order.tracking_number %>
                  </div>
                </li>
                <li>
                  <div class="order-index-icons">
                    <div class="col-xs-4 text-center">
                      <%= link_to order do %>
                        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                      <% end %>
                    </div>
                    <div class="col-xs-4 text-center">
                      <%= link_to edit_order_path(order) do %>
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                      <% end %>
                    </div>
                    <div class="col-xs-4 text-center">
                      <%= link_to order, method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                      <% end %>
                    </div>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="text-center items-paginate">
  <%= paginate @orders, theme: "bootstrap2" %>
</div>
<div class="text-center items-paginate">
  <%= page_entries_info @orders, entry_name: 'Orders' %>
</div>
