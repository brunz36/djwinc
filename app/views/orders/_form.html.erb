<%= form_for(@order, html: { class: "form-horizontal", role: "form" }) do |f| %>

  <%# Alert showing errors for this form %>
  <% if @order.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h4>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# first_name %>
  <div class="form-group">
    <%= f.label :first_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>


  <%# last_name %>
  <div class="form-group">
    <%= f.label :last_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>


  <%# address %>
  <div class="form-group">
    <%= f.label :address, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>


  <%# city %>
  <div class="form-group">
    <%= f.label :city, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :city, class: "form-control" %>
    </div>
  </div>


  <%# state %>
  <div class="form-group">
    <%= f.label :state, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select(:state, Order.states.map { |state| [state, state] }, prompt: 'Select State', class: "form-control") %>
    </div>
  </div>

  <%# zip %>
  <div class="form-group">
    <%= f.label :zip, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :zip, class: "form-control" %>
    </div>
  </div>


  <%# phone_number %>
  <div class="form-group">
    <%= f.label :phone_number, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :phone_number, class: "form-control" %>
    </div>
  </div>


  <%# email %>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>


  <%# pay_type %>
  <div class="form-group">
    <%= f.label :pay_type, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :pay_type, Order.pay_types.keys, prompt: 'Select Payment Method', class: "form-control" %>
    </div>
  </div>

  <ul>
    <% @current_cart.line_items.each do |line_item| %>
      <li>Item: <%= line_item.item.name %>/ Price: <%= number_to_currency(line_item.item.price) %>
    <% end %>
  </ul>

  <ul>
    <li><%= @current_cart.sub_total%></li>
  </ul>

  <%# Submit %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end -%>
