<div class="page-header">
  <%= link_to new_admin_item_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Item
  <% end %>
  <h1 Listing>Dino's Jewelry Inventory</h1>
</div>


<div class="container">
  <div class="row text-center">
    <div class="col-xs-4">
      <h4>Category</h4>
    </div>
    <div class="col-xs-4">
      <h4>Name</h4>
    </div>
    <div class="col-xs-4">
      <h4>Price</h4>
    </div>
  </div>
  <div id="accordion" role="tablist" aria-multiselectable="true">
    <%- @items.each_with_index do |item, index| %>
      <div class="card">
        <div class="card-header" role="tab" id="heading<%= index %>">
          <h5 class="mb-0">
            <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= index %>" aria-expanded="false" aria-controls="collapse<%= index %>">
              <div class="row text-center">
                <div class="col-xs-4">
                  <h5><%= item.category %></h5>
                </div>
                <div class="col-xs-4">
                  <h5><%= item.name %></h5>
                </div>
                <div class="col-xs-4">
                  <h5><%= number_to_currency(item.price) %></h5>
                </div>
              </div>
            </a>
          </h5>
        </div>
      </div>
      <div id="collapse<%= index %>" class="collapse" role="tabpanel" aria-labelledby="heading<%= index %>">
        <div class="card-block">
          <ul class="row text-left">
            <li></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Category</th>
        <th>Name</th>
        <th>In Stock</th>
        <th>Metal</th>
        <th>Certification</th>
        <th>Appraisal</th>
        <th>Price</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @items.each do |item| %>
      <tr>
        <td><%= item.category %></td>
        <td><%= item.name %></td>
        <td><%= item.in_stock %></td>
        <td><%= item.metal %></td>
        <td><%= item.certification %></td>
        <td><%= item.appraisal %></td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= item.description %></td>
        <td>
          <%= link_to admin_item_path(item) do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_admin_item_path(item) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to admin_item_path(item), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="text-center items-paginate">
  <%= paginate @items, theme: "bootstrap2" %>
</div>
