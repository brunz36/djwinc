<div class="page-header admin-show-item-header container">
  <h1 class="col-xs-12 col-sm-4">Item Details</h1>
  <div class="col-xs-12 col-sm-8 col-sm-offset-02 text-right">
    <%= link_to admin_items_path do %>
    <span>Back</span>
    <% end %>
    <%= link_to edit_admin_item_path(@item) do %>
    <span>Edit</span>
    <% end %>
    <%= link_to admin_item_path(@item), method: :delete, class: '', data: { confirm: 'Are you sure?'} do %>
    <span>Delete</span>
    <% end %>
  </div>
</div>

<div class="admin-item-show-body">
  <dl class="dl-horizontal">
    <dt>Category:</dt>
    <dd><%= @item.category %></dd>

    <dt>Metal:</dt>
    <dd><%= @item.metal %></dd>

    <dt>Name:</dt>
    <dd><%= @item.name %></dd>

    <dt>Certification:</dt>
    <%- if @item.certification.blank? %>
      <dd>None</d>
    <% else %>
      <dd><%= link_to "Click Here", asset_path(@item.certification_url), target: "_blank" %></dd>
    <% end %>

    <dt>Appraisal:</dt>
    <%- if @item.appraisal.blank? %>
      <dd>None</d>
    <% else %>
      <dd><%= link_to "Click Here", asset_path(@item.appraisal_url), target: "_blank" %></dd>
    <% end %>

    <dt>In Stock:</dt>
    <dd><%= @item.in_stock %></dd>

    <dt>Description:</dt>
    <dd><%= @item.description %></dd>

    <dt>Price:</dt>
    <dd><%= number_to_currency(@item.price) %></dd>

    <div class="container">
      <div class="row">
        <% @item.photos.each do |photo| %>
        <div class="col-xs-12 col-sm-6">
          <% if photo.image_data %>
          <%= image_tag(photo.image_url(:small), class:"thumbnail center-block") %>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>

  </dl>
</div>
