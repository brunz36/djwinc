<div class="page-header index-header djwinc-border col-xs-12">
    <h1 class="col-xs-12 col-sm-9">Custom Creations</h1>
    <h4 class="gold-text col-xs-12 col-sm-3">Escape the routine.</h4>
    <!-- BASIC REFACTOR LATER -->
</div>

<div class="row">
  <%- @items.each do |item| %>
    <div class="col-xs-12 col-sm-6">
      <div class="index-img">
        <%= link_to item, class:"thumbnail" do %>
          <%- if item.thumbnail_photo %>
            <%= image_tag item.thumbnail_photo.image_url(:medium) %>
          <% else %>
            <%= image_tag("stock-diamond.jpg") %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="text-center items-paginate">
  <%= paginate @items, theme: "bootstrap2" %>
</div>
<div class="text-center items-paginate">
  <%= page_entries_info @items, entry_name: 'Creation' %>
</div>
