<div class="page-header">
  <%= link_to items_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_item_path(@item), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show item</h1>
</div>

<dl class="dl-horizontal">
  <dt>Category:</dt>
  <dd><%= @item.category %></dd>

  <dt>Metal:</dt>
  <dd><%= @item.metal %></dd>

  <dt>Center stone:</dt>
  <dd><%= @item.center_stone %></dd>

  <dt>Certification:</dt>
  <dd><%= @item.certification %></dd>

  <dt>Stones:</dt>
  <dd><%= @item.stones %></dd>

  <dt>Size:</dt>
  <dd><%= @item.size %></dd>

  <dt>Appraisal:</dt>
  <dd><%= @item.appraisal %></dd>

  <dt>Price:</dt>
  <dd><%= @item.price %></dd>

  <dt>Description:</dt>
  <dd><%= @item.description %></dd>

</dl>
